specVersion: 0.0.2
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum/contract
    name: DopeWarsLoot
    network: {{networkName}}
    source:
      address: "{{contracts.dope.address}}"
      abi: DopeWarsLoot
      startBlock: {{contracts.dope.startBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.5
      language: wasm/assemblyscript
      entities:
        - Transfer
      abis:
        - name: DopeWarsLoot
          file: ../abis/DopeWarsLoot.json
      eventHandlers:
        - event: Transfer(indexed address,indexed address,indexed uint256)
          handler: handleDopeTransfer
      file: ./src/mapping.ts
  - kind: ethereum/contract
    name: Paper
    network: {{networkName}}
    source:
      address: "{{contracts.paper.address}}"
      abi: Paper
      startBlock: {{contracts.paper.startBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.5
      language: wasm/assemblyscript
      entities:
        - Wallet
      abis:
        - name: Paper
          file: ../abis/Paper.json
        - name: DopeWarsLoot
          file: ../abis/DopeWarsLoot.json
      eventHandlers:
        - event: Transfer(indexed address,indexed address,uint256)
          handler: handlePaperTransfer
      file: ./src/mapping.ts
